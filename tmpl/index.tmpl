<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8"/>
    <title>Coverage information</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="style.css">
  </head>

  <body>
    <h1>Coverage</h1>

    <hr/>

    <div class="summary">
      <div>
        <table class="legend">
          <tr>
            <th scope="row">Directory:</th>
            <td>{{ .CWD }}</td>
          </tr>
          <tr>
            <th scope="row">Date:</th>
            <td>2021-06-30 12:24:59</td>
          </tr>
        </table>
      </div>

      <div>
        <table class="coverage">
          <tr>
            <th></th>
            <th scope="col">Exec</th>
            <th scope="col">Total</th>
            <th scope="col">Coverage</th>
          </tr>
          {{- with .LineCoverage -}}
            <tr>
              <th scope="row">Lines:</th>
              <td>{{ .Exec }}</td>
              <td>{{ .Total}}</td>
              <td class="TODO">{{ printf "%.2f" .Percentage }}%</td>
            </tr>
          {{- end -}}
        </table>
      </div>
    </div>

    <hr/>

    <table class="file-list">
      <col/>
      <colgroup span="3"/>
      <colgroup span="2"/>

      <tr>
        <th scope="col">File</th>
        <th scope="colgroup" colspan=3>Lines</th>
        <th scope="colgroup" colspan=2>Unconcretized</th>
      </tr>

      {{- range .Files -}}

      <tr>
        <th scope="row">
          <a href="{{ .Path }}">{{ .Path }}</a>
        </th>
        {{- with .LineCoverage -}}
          {{- $p := (printf "%.2f" .Percentage) -}}
          <td>
            <meter class="coverage-low" min="0" max="100" value="{{ $p }}" title="{{ $p }}%">{{ $p }}</meter>
          </td>
          <td class="CoverValue line-coverage coverage-medium">{{ $p }}%</td>
          <td class="CoverValue line-coverage coverage-medium">{{ .Exec }} / {{ .Total}}</td>
        {{- end -}}
        {{- with .SymbolicCoverage -}}
          <td class="CoverValue branch-coverage coverage-medium">{{ printf "%.2f" .Percentage }}%</td>
          <td class="CoverValue branch-coverage coverage-medium">{{ .Exec }} / {{ .Total}}</td>
        {{- end -}}
      </tr>

      {{- end -}}
    </table>

  </body>
</html>
